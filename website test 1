<body>

<div id="stars"></div>
<h1>MY ARTIST NAME</h1>

<div id="carousel">
  <div id="wheel"></div>
</div>

<div id="panel">
  <h2 id="panelTitle"></h2>
  <div id="tracklist"></div>
</div>

<div id="controls">
  <button class="ctrl" id="leftBtn" title="◀">◀</button>
  <button class="ctrl" id="rightBtn" title="▶">▶</button>
</div>
<div id="hint">Use ← → or buttons to spin • Enter to select</div>

<script>
/* ===== SAME RELEASES ARRAY AS BEFORE ===== */
const releases = [
  {
    cover: "cover1.jpg",
    title: "Neon Dreams",
    tracks: [
      {name:"Starlight",  file:"album1_track1.mp3"},
      {name:"Velocity",   file:"album1_track2.mp3"},
      {name:"Afterglow",  file:"album1_track3.mp3"}
    ]
  },
  {
    cover: "cover2.jpg",
    title: "Lo-Fi Moon",
    tracks: [
      {name:"Crater",     file:"album2_track1.mp3"},
      {name:"Tranquil",   file:"album2_track2.mp3"}
    ]
  },
  {
    cover: "cover3.jpg",
    title: "Digital Rust",
    tracks: [
      {name:"Ghost",      file:"album3_track1.mp3"},
      {name:"Decay",      file:"album3_track2.mp3"},
      {name:"Reboot",     file:"album3_track3.mp3"}
    ]
  },
  {
    cover: "cover4.jpg",
    title: "Singles",
    tracks: [
      {name:"Orbit",      file:"album4_track1.mp3"}
    ]
  },
  {
    cover: "cover5.jpg",
    title: "Collabs",
    tracks: [
      {name:"With You",   file:"album5_track1.mp3"},
      {name:"Gravity",    file:"album5_track2.mp3"}
    ]
  },
  {
    cover: "cover6.jpg",
    title: "Scores",
    tracks: [
      {name:"Overture",   file:"album6_track1.mp3"},
      {name:"Interlude",  file:"album6_track2.mp3"}
    ]
  }
];
/* ========================================= */

const wheel   = document.getElementById('wheel');
const panel   = document.getElementById('panel');
const root    = document.documentElement;
let index     = 0;
const total   = releases.length;
const angleStep = 360 / total;

/* starfield */
function createStars(){
  const stars=document.getElementById('stars');
  for(let i=0;i<150;i++){
    const s=document.createElement('div');
    s.className='star';
    s.style.left=Math.random()*100+'%';
    s.style.top=Math.random()*200+'vh';
    s.style.animationDelay=Math.random()*120+'s';
    stars.appendChild(s);
  }
}

/* build wheel */
function buildWheel(){
  releases.forEach((rel,i)=>{
    const div=document.createElement('div');
    div.className='album';
    div.style.backgroundImage=`url(${rel.cover})`;
    div.dataset.idx=i;
    div.addEventListener('click',()=>selectAlbum(i));
    wheel.appendChild(div);
  });
  selectAlbum(0);
}

/* color extractor mock (just use vibrant mid-tone) */
function palette(url){
  /* you could use a real extractor; here we fake it */
  const colors=['#00ffe5','#ff00c1','#ffae42','#0aff99','#ae00ff','#00b3ff'];
  return colors[index%colors.length];
}

/* select & animate */
function selectAlbum(i){
  index=i;
  root.style.setProperty('--angle', `${-index*angleStep}deg`);
  const accent=palette(releases[i].cover);
  root.style.setProperty('--accent',accent);
  root.style.setProperty('--glow',accent+'80');

  wheel.querySelectorAll('.album').forEach((al,idx)=>{
    al.classList.toggle('active',idx===i);
    al.classList.toggle('inactive',idx!==i);
  });
  document.body.classList.add('selection');

  /* panel content */
  const rel=releases[i];
  document.getElementById('panelTitle').textContent=rel.title;
  const box=document.getElementById('tracklist');
  box.innerHTML='';
  rel.tracks.forEach(t=>{
    const row=document.createElement('div');row.className='track';
    row.innerHTML=`<span>${t.name}</span>
                   <audio class="player" controls preload="none"><source src="${t.file}"></audio>`;
    box.appendChild(row);
  });
  panel.classList.add('show');

  /* progress glow hack */
  document.querySelectorAll('.player').forEach(p=>{
    p.addEventListener('play',()=>{
      p.classList.add('playing');
      const dur=p.duration||180; p.style.setProperty('--duration',dur+'s');
    });
    p.addEventListener('pause',()=>p.classList.remove('playing'));
    p.addEventListener('ended',()=>p.classList.remove('playing'));
  });
}

function move(dir){
  index=(index+dir+total)%total;
  selectAlbum(index);
}

/* controls */
document.getElementById('leftBtn').onclick =()=> move(-1);
document.getElementById('rightBtn').onclick=()=> move(1);
document.addEventListener('keydown',e=>{
  if(e.key==='ArrowLeft')  move(-1);
  if(e.key==='ArrowRight') move(1);
});

createStars();
buildWheel();
</script>
</body>
</html>
